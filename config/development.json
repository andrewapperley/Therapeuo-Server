{



    "middleware": {

        "devtools": {
            "enabled": true,
            "priority": 35,
            "module": {
                "name": "construx",
                "arguments": [
                    "path:./public",
                    "path:./.build",
                    {

                        "template": {
                            "module": "construx-dustjs-i18n",
                            "files": "/templates/**/*.js",
                            "base": "templates"

                            ,"i18n": "config:i18n"

                        },


                        "css": {
                            "module": "construx-less",
                            "files": "/css/**/*.css"
                        },

                        "copier": {
                            "module": "construx-copier",
                            "files": "**/*"
                        }
                    }
                ]
            }
        }
    }
}
